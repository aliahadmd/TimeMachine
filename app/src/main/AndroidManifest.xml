<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Basic permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Exact alarm permission (for habit reminders) -->
    <!-- Note: SCHEDULE_EXACT_ALARM is available on API 31+ and requires user permission on API 31-32 -->
    <!-- On API 33+, it's automatically granted -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    
    <!-- Removed restricted permissions:
         - FOREGROUND_SERVICE_SPECIAL_USE: Requires special Play Store approval
         - USE_EXACT_ALARM: Deprecated in favor of SCHEDULE_EXACT_ALARM
         - ACCESS_NOTIFICATION_POLICY: Requires special permission, not needed for basic notifications
    -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TimeManager">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TimeManager"
            android:launchMode="singleTop"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Immersive Fullscreen Timer Activity -->
        <activity
            android:name=".ImmersiveTimerActivity"
            android:exported="false"
            android:theme="@style/Theme.TimeManager"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:launchMode="singleTask" />
        
        <receiver
            android:name=".HabitReminderReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>
